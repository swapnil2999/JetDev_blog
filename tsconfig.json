{
    "compilerOptions": {
    "module": "commonjs",
    "target": "es6",
    "noImplicitAny": false,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "baseUrl": ".",
    "paths": {
    "*": [
    "node_modules/*",
    "src/types/*"
    ]
    },
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true
    },
    "include": [
    "src/**/*"
    ],
    "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "typings"
    ],
    "paths": {
        "*": ["node_modules/*", "src/types/*"]
    }
}
